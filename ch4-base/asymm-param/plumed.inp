UNITS LENGTH=A TIME=fs ENERGY=kcal/mol

COORDINATIONNUMBER SPECIESA=2-5 SPECIESB=1 D_0=0.85 R_0=0.25 NN=1 MEAN MOMENTS=2 LABEL=nm2
